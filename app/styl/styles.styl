 @import url('https://fonts.googleapis.com/css?family=Exo+2:400,500,600,700,800,300&subset=cyrillic,latin');

 @import url('https://fonts.googleapis.com/css?family=PT+Serif:400,400italic&subset=latin,cyrillic');



 $whitebg = #F4FDFB
 $blue = #0063b1
 $green = #1D9870
 $greybg = #F2F2ED

 $cta(color)
 	border-radius 25px
 	background-color color
 	color #fff
 	font-size 60%
 	text-transform uppercase
 	padding 15px 30px
 	box-shadow 1px 1px 1px #000
 	text-align center
 	display table
 	margin auto
 	line-height 100%
 	
 *
 	position relative
 	z-index 0
 	color inherit
 	letter-spacing 0.03em

 html,body 
 	font-size 18px
 	padding 0
 	margin 0
 	height 100%
 	font-family 'Exo 2', sans-serif
 	font-weight 300
 	max-width 100vw
 	
 body
 	font-size 2rem
 	overflow-x hidden

 h1, h2, h3, h4, h5, ul, li
 	margin 0
 	padding 0
 	
 h1, h2, h3
 	font-family 'PT Serif', serif
 	margin 50px 0
 	color $blue
 	letter-spacing 0.06em
 	border-bottom: 7px solid $blue
 	display: inline-block
 	
 h1
 	font-size 330%
 	
 .container
 	width 100%
 	min-width 960px
 	max-width 1240px
 	margin auto
 	z-index 3
 	padding 20px 10px 
 	


.nt
	
	&:after
		content 'TM'
		

/*
-------------------------------------------------------------------------------
*/


 @media screen and (min-width: 768px)
 	body
 		font-size: 1.4rem
 		
 	.container
 		padding 40px 30px 

 @media screen and (min-width: 960px)
 	body
 		font-size: 1.2rem
 	.container
 		padding 40px 40px 
  

