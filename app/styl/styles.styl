 @import url('https://fonts.googleapis.com/css?family=Exo+2:400,500,600,700,800,300&subset=cyrillic,latin')

 @import url('https://fonts.googleapis.com/css?family=PT+Serif:400,400italic&subset=latin,cyrillic')



 $whitebg = #F4FDFB
 $blue = #0063b1
 $green = #1D9870
 $greybg = #ECECEC
 $greenbg = #EAFFE5
 $textblack = #4F5050


 $cta(color)
 	border-radius 25px
 	background-color color
 	color #fff
 	font-size 60%
 	text-transform uppercase
 	padding 0 15px
 	box-shadow 1px 1px 1px #000
 	text-align center
 	display table
 	margin auto
 	line-height 50px
 	letter-spacing 0.08em
 	max-width 200px
 	width 100%
 	cursor pointer

 *
 	position relative
 	z-index 0
 	color inherit
 	letter-spacing 0.03em
 	font-weight inherit

 html,body 
 	font-size 18px
 	padding 0
 	margin 0
 	height 100%
 	font-family 'Exo 2', sans-serif
 	font-weight 300
 	max-width 100vw
 	
 body
 	font-size 2rem
 	overflow-x hidden

 h1, h2, h3, h4, h5, ul, li
 	margin 0
 	padding 0
 	
 h1, h2, h3
 	font-family 'PT Serif', serif
 	margin 50px 0
 	color $blue
 	letter-spacing 0.06em
 	border-bottom: 7px solid $blue
 	display: table
 	
 h1
 	font-size 330%
 	
 .container
 	width 100%
 	min-width 960px
 	max-width 1240px
 	margin auto
 	z-index 3
 	padding 20px 10px  90px 10px
 	


.nt
	margin-right 20px
	
	
	&:after
		content 'TM'
		display inline-block
		vertical-align super
		font-size 40%
		position absolute
		top -20px
		right -10px
		


#show-box
	cursor pointer
	display block !important
	visibility visible !important
	position fixed
	height 100vh
	width 100vw
	top 0
	left 0
	background-size contain
	background-position 50%
	background-repeat no-repeat
	background-color rgba(0, 0, 0, 0.64)

/*
-------------------------------------------------------------------------------
*/


 @media screen and (min-width: 768px)
 	body
 		font-size 1.4rem
 	.container
 		padding 40px 20px 90px


 @media screen and (min-width: 960px)
 	body
 		font-size 1.2rem
 	.container
 		padding 40px 30px 90px
  

