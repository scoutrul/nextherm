.header
	width 100%
	// background-color #FFF
	position absolute
	z-index 9
	color #FFF
	// text-shadow 1px 1px 2px rgba(70,70,70,0.67)

	.container
		padding 30px 0
		display flex
		align-items center
		justify-content space-between
		flex-wrap wrap
		
		.navmenu
			.menu
				li
					display inline-block
					font-size 70%
					border-right 1px solid #FFF
					padding-right 10px
					padding 0 30px
					a
						display inline-block
						text-decoration none
						border-bottom 1px dashed #FFF
						padding 5px 0 6px
						
					&:last-child
						border none
					
		.cta
			$cta($whitebg)
			color #222
			
			
			
		.contact
			text-align right
			.phone
				font-size 160%
			.mail
				font-size 80%
				
				svg
					display inline-block
					margin-right 10px
					width 22px
					vertical-align middle
					
					path
						fill $whitebg
			

	
section.screen1
	height calc(100% - 30px)
	// background-image url('images/main.jpg')
	// background-color #4c4e4e
	// background-position 50% 50%
	// background-repeat no-repeat
	// background-size cover
	// background-attachment fixed
	
	&:after
		content ''
		width 100%
		height 100%
		z-index 5
		position absolute
		top 0
		background linear-gradient(to bottom, #094677 0%, #0063b1 80%, #074D85 100%)

	.container
		z-index 9
		height 100%
		display flex
		flex-direction column
		align-items center
		color #FFF
		padding 0 10px
		text-align center
		
	h1
		line-height 140%
		font-size 280%
		color #FFF
		margin auto auto 0px auto
		text-shadow 1px 1px 2px rgba(70, 70, 70, 0.67)
		border none
		sub
			font-size 20%
			vertical-align top
			bottom -2em
		.nt
			&:after
				right -30px
				font-size 20%
				
	h2
		font-size 120%
		color #FFF
		margin 0px auto auto auto
		text-shadow 1px 1px 2px rgba(70, 70, 70, 0.67)
		border none
		
		
	.icons 
		margin 50px auto
		display flex
		width 100%
		
		svg
			margin auto
			width 70px
			
			&:first-child
				margin-right 0 
			&:last-child
				margin-left 0
	

section.screen2
	background-color #FFF
	
	&:before
		content ''
		width 200%
		height 50%
		min-height 500px
		background-color $whitebg
		position absolute
		top 0
		left -50%
		transform rotate(7deg)	
		z-index 1
		
	&:after
		content ''
		width 200%
		height 50%
		min-height 500px
		background-color $whitebg
		position absolute
		top 0
		right -50%
		transform rotate(-7deg)
		z-index 1	
	
	.bg 
		z-index 3
		background-position 50% 0%
		background-repeat no-repeat
		background-size contain
		background-image url('../images/lenta.jpg')
		
	
	.text
		display flex
		flex-wrap wrap
		line-height 200%
		
		.one,.two
			flex 1 1 480px
		
		.one
			margin-right 40px

	blockquote
		margin 70px auto
		border-left 7px solid #1d5298
		padding-left 20px
		font-size 160%
		font-style italic
		font-weight 500
		color #313131
		line-height 150%
		display table
	
		
	.features
		max-width 720px
		
		li
			margin 50px 0
			list-style none
			
			svg
				display inline-block
				vertical-align middle
				margin-right 20px
				width 38px
				
				path
					fill $green
			.txt
				font-weight 600
				display inline-block
				vertical-align middle	
				color $textblack
			
	.cta
		$cta($blue)
			

section.screen3
	background-color $greenbg
		
	.one,.two
		display flex
		flex-wrap wrap
		line-height 180%
		
		.left, .right
			flex 1 1 480px
			
			.bg
				padding 30px
				margin 40px
				text-align center
				border 15px solid #9CA3A9
				border-radius 15px
				background-color #727E8A
				box-shadow 1px 1px 1px #2b2b2b, inset 0px 0px 10px rgb(60, 63, 66)
			    
				img
					opacity 0.9
					box-shadow 3px 3px 20px #404040
					
	.one
		.right
			img, svg
				float left
				margin-right 30px
			svg
				max-width 80px
				max-height 70px
				margin-right 20px
				
			img+p, svg+p
				margin-top -10px
				margin-bottom 70px

