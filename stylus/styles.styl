@import '0set.styl'


$green = #1D9870

$greybg = #E0E0D5

$cta(color)
	border-radius: 25px;
	background-color: color;
	color: #fff;
	font-size: 60%;
	text-transform: uppercase;
	padding: 15px 30px;
	box-shadow: 1px 1px 1px #000;
	text-align center
	display table
	margin auto
	line-height 100%

	
*
	position relative
	z-index 0
	color inherit
	letter-spacing 0.03em
	

.header
	width 100%
	// background-color #FFF
	position absolute
	z-index 9
	color #FFF
	// text-shadow 1px 1px 2px rgba(70,70,70,0.67)

	.container
		padding 30px 0
		display flex
		align-items center
		justify-content space-between
		flex-wrap wrap
		
		.navmenu
			.menu
				li
					display inline-block
					font-size 70%
					border-right 1px solid #FFF
					padding-right 10px
					padding 0 30px
					a
						display inline-block
						text-decoration none
						border-bottom 1px dashed #FFF
						padding 5px 0 6px
						
					&:last-child
						border none
					
		.cta
			$cta($whitebg)
			color #222
			
			
			
		.contact
			text-align right
			.phone
				font-size 160%
			.mail
				font-size 80%
			

	
section.screen1
	height calc(100% - 30px)
	background-image url('http://www.traemcneely.com/wp-content/uploads/2015/03/wpid-wp-1426826982146.jpeg')
	background-position 50% 50%
	background-repeat no-repeat
	background-size cover
	background-attachment fixed
	
	&:after
		content ''
		width 100%
		height 100%
		z-index 5
		position absolute
		top 0
		background-color: rgba(75, 85, 95, 0.8);

	.container
		z-index 9
		height 100%
		display flex
		flex-direction column
		align-items center
		color #FFF
		padding 0 10px
		text-align center
		
	h1
		line-height 140%
		font-size 280%
		color #FFF
		margin auto auto 20px auto
		text-shadow 1px 1px 2px rgba(70, 70, 70, 0.67)
		sub
			font-size 20%
			vertical-align top
			bottom -2em
	h2
		font-size 120%
		color #FFF
		margin 20px auto auto auto
		text-shadow 1px 1px 2px rgba(70, 70, 70, 0.67)
		
	

section.screen2
	background-color $whitebg
	
	&:before
		content ''
		width 200%
		height 50%
		min-height 500px
		background-color $whitebg
		position absolute
		top 0
		left -50%
		transform rotate(7deg)	
		z-index 1
		
	&:after
		content ''
		width 200%
		height 50%
		min-height 500px
		background-color $whitebg
		position absolute
		top 0
		right -50%
		transform rotate(-7deg)
		z-index 1	
	
	.bg 
		z-index 3
		background-position 50% 50%
		background-repeat no-repeat
		background-size cover
		// background-image url('http://woodruss.ru/information/uploads/posts/2011-11/1321088576_stan1.jpg')
	
	.text
		display flex
		flex-wrap wrap
		line-height 200%
		
		.one,.two
			padding 20px
			flex 1 1 480px

	blockquote
		margin: 70px 0;
		border-left: 7px solid #1d5298;
		padding-left: 20px;
		font-size: 160%;
		font-style: italic;
		width: 90%;
		font-weight: 500;
		color: #4A4A4A;
		line-height: 150%;
		
	.features
		max-width 480px
		margin auto
		
		li
			margin 50px 0
			
	.cta
		$cta($blue)
			

section.screen3
	background-color $greybg
		
	.one,.two
		display flex
		flex-wrap wrap
		line-height 200%
		
		.left, .right
			padding 20px
			flex 1 1 480px
			

section.screen4
	.features
		display flex
		flex-wrap wrap
		margin auto
		
		li
			flex 1 1 480px
			margin 50px 0
			
	.cta
		$cta($blue)
		
section.screen5
	background-color $greybg
		
section.screen6
	.cta
		$cta($green)
		margin 40px 0 0 auto
		
	.phone
		font-size 180%
		
	.mail
		font-size 80%
		
	.one
		display flex
		flex-wrap wrap
		line-height 200%
		
		.left,.right
			padding 20px
			flex 1 1 480px
		.right
			text-align right
			